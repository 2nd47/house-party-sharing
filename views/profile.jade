// Landing Page contents
extends layout

block css

block title
  title BrandUsed

block content
  .profile
    .avatar 
      img(src=user.avatar, width='256px', height='256px')
    .username #{user.username}
    .name #{user.name}
    .bio #{user.bio}
  .item-listings
    each listing in listings
      +listingSingle(listing)
  .addFriend
    form(action='/api/profile/' + user.username + '/add', method='post')#addFriend
      input(type='submit', value='Add to Friends', form='addFriend')
