// Landing Page contents
extends layout

block css

block title
  title BrandUsed

block content
  h1 Create page!
  form(action='/api/listing/create', method='post')#create-listing
    p Name:
    input(type='text', name='name')
    p Designer:
    input(type='text', name='designer')
    p Price:
    input(type='text', name='price')
    p Sizing:
    input(type='text', name='sizing')
    p Description:
    input(type='text', name='description')
    p Item becomes available on:
    input(type='text', name='dateFrom')
    p Item stops being available on: (optional)
    input(type='text', name='dateTo')
    input(type='submit', value='create', form='create-listing')
